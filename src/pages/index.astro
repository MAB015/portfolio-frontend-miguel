---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import IconLinkedin from '../components/icons/IconLinkedin.astro';
import SocialPill from '../components/SocialPill.astro';
import IconGithub from '../components/icons/IconGithub.astro';
import IconTwitter from '../components/icons/IconTwitter.astro';
import IconMail from '../components/icons/IconMail.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import IconExperience from '../components/icons/IconExperience.astro';
import IconProject from '../components/icons/IconProject.astro';
import Project from '../components/Project.astro';
import H1 from '../components/styles/H1.astro';
import H2 from '../components/styles/H2.astro';
---

<Layout title="Portfolio Miguel Angel | UX Designer and Frontend Developer" description="Contrata a Miguel Angel para diseñar y desarrollar tu website. UX Designer and Frontend Developer, especializado en entender y crear soluciones para los usuarios">
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
			<H1>
				Hey, soy Miguel Ángel
				<a href="https://linkedin.com/in/mab015" target="_blank" rel="noopener" class="flex justify-center items-center ">
					<Badge>Disponible para trabajar</Badge>
				</a>
			</H1>

			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span>+1 año de experiencia.</span> <span class="text-yellow-200/90">Diseñador UX y Desarrollador Frontend.</span> <span class="text-red-200/90">De Cali-Colombia, viviendo en Paris-Francia.</span> <span class="opacity-70">Especializado en entender y crear soluciones para los usuarios.</span></h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://linkedin.com/in/mab015">
					<IconLinkedin class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/mab015">
					<IconGithub class="size-4 md:size-6" />
					Github
				</SocialPill>
				<SocialPill href="https://twitter.com/in/mab015">
					<IconTwitter class="size-4 md:size-6" />
					Twitter
				</SocialPill>
				<SocialPill href="mailto:miguellangellbol@gmail.com">
					<IconMail class="size-4 md:size-6" />
					miguellangellbol@gmail.com
				</SocialPill>
			</nav>

		</SectionContainer>

		<SectionContainer id="experience">
			<H2>
				<IconExperience class="size-7" />
				Work Experience
			</H2>
			<Experience />
		</SectionContainer>
		
		<SectionContainer id="experience">
			<H2>
				<IconProject class="size-7" />
				Projects
			</H2>
			<Project />
		</SectionContainer>
	</main>
</Layout>