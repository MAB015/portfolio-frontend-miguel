---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import IconLinkedin from '../components/icons/IconLinkedin.astro';
import SocialPill from '../components/SocialPill.astro';
import IconGithub from '../components/icons/IconGithub.astro';
import IconTwitter from '../components/icons/IconTwitter.astro';
import IconMail from '../components/icons/IconMail.astro';
---

<Layout title="Portfolio Miguel Angel | UX Designer and Frontend Developer">
	<main>
		<section class="w-[740px] mx-auto py-44">
			<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10 ">
				Hey, soy Miguel Ángel
				<a href="https://linkedin.com/in/mab015" target="_blank" rel="noopener" class="flex justify-center items-center ">
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-2xl text-wrap">
				<span>+1 año de experiencia.</span> <span class="text-yellow-200/90">Diseñador UX y Desarrollador Frontend.</span> <span class="text-red-200/90">De Cali-Colombia, viviendo en Paris-Francia.</span> <span class="opacity-70">Especializado en entender y crear soluciones para los usuarios.</span></h2>

			<nav class="flex gap-x-4 mt-8">
				<SocialPill href="https://linkedin.com/in/mab015">
					<IconLinkedin class="w-6 h-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/mab015">
					<IconGithub class="w-6 h-6" />
					Github
				</SocialPill>
				<SocialPill href="https://twitter.com/in/mab015">
					<IconTwitter class="w-6 h-6" />
					Twitter
				</SocialPill>
				<SocialPill href="https://twitter.com/in/mab015">
					<IconMail class="w-6 h-6" />
					miguellangellbol@gmail.com
				</SocialPill>
			</nav>
		</section>
		
	</main>
</Layout>